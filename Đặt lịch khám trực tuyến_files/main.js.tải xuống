const btt = document.querySelector('.btn-go-to-top');
window.addEventListener('scroll', () => {
  var scrollPosition = window.scrollY;
  if (scrollPosition > 200) {
    btt.style.display = 'block';
  } else {
    btt.style.display = 'none';
  }
});

